<center><h1>Katas</h1></center>

<ul>
	<% @katas.each do |kata| %>
		<li>
			<%= link_to(kata.title, kata_path(kata.id)) %>
			- <%= link_to('Edit', edit_katas_path(kata.id)) %>
			- <%= link_to('Delete', delete_katas_path(kata.id), method: :delete) %>
		</li>
	<% end %>
</ul>

<p>
	<%= link_to('New Kata', new_kata_path) %>
</p>